<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:text="Enter your name, and we will send you password!"/>

    <EditText android:id="@+id/signup_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Last and first name"
        android:layout_marginTop="20dp"
        />

    <Button android:id="@+id/signup_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sign up"
        android:background="@android:color/holo_green_light"
        android:onClick="signUp"
        />

    <ProgressBar android:id="@+id/signup_progress"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

    <TextView android:id="@+id/signup_password_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:layout_marginTop="30dp"
        android:text="Your password:"
        android:visibility="gone"/>

    <EditText android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11pt"
        android:layout_marginTop="10dp"
        android:text=""
        android:visibility="gone"/>

    <Button android:id="@+id/sigunp_projects_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to projects"
        android:background="@android:color/holo_green_light"
        android:visibility="gone"
        android:onClick="gotoProjects"/>


</LinearLayout>
